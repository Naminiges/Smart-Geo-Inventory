# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
SECURITY_PASSWORD_SALT=your-security-salt-here

# Email Configuration
# Option 1: Gmail (Note: May be blocked on some networks)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=youremail@gmail.com
# MAIL_PASSWORD=your app password
# MAIL_DEFAULT_SENDER=youremail@gmail.com

# Option 2: Outlook/Hotmail (Often works better on restricted networks)
# MAIL_SERVER=smtp.office365.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=youremail@outlook.com
# MAIL_PASSWORD=your password
# MAIL_DEFAULT_SENDER=youremail@outlook.com

# Option 3: SendGrid (Recommended for production)
# Get free API key at: https://sendgrid.com/
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=YOUR_SENDGRID_API_KEY
# MAIL_DEFAULT_SENDER=youremail@example.com

# For testing, you can also use Mailtrap (fake SMTP server)
# MAIL_SERVER=sandbox.smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-mailtrap-username
# MAIL_PASSWORD=your-mailtrap-password
# MAIL_DEFAULT_SENDER=test@example.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smart_geo_inventory

# Caching Configuration
# For development (simple in-memory cache):
CACHE_TYPE=SimpleCache
# For production (Redis):
# CACHE_TYPE=RedisCache
# REDIS_URL=redis://localhost:6379/0

# Redis Configuration (if using RedisCache)
REDIS_URL=redis://localhost:6379/0

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS

# Application Configuration
APP_NAME=Smart Geo Inventory
APP_VERSION=1.0.0

# GIS Configuration
DEFAULT_MAP_CENTER_LAT=3.561676
DEFAULT_MAP_CENTER_LON=98.6563423
DEFAULT_MAP_ZOOM=13

